<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSmallSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:id="@+id/tvSmallArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibSmallPrev"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:background="@drawable/skip_prev" />

        <ImageButton
            android:id="@+id/ibSmallPlay"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom" />

        <ImageButton
            android:id="@+id/ibSmallNext"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:background="@drawable/skip_next" />

        <ImageView
            android:id="@+id/ivSmallPreview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>