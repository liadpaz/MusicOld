<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UselessLeaf,ContentDescription">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBigSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:id="@+id/tvBigArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <ImageButton
                android:id="@+id/ibBigPrev"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/skip_prev" />

            <ImageButton
                android:id="@+id/ibBigPlay"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="0" />

            <ImageButton
                android:id="@+id/ibBigNext"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="0"
                android:background="@drawable/skip_next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBigPreview"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical|end"/>
</LinearLayout>